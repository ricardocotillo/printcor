{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content" id="home">
				<div class="splide">
          <div class="splide__track">
            <ul class="splide__list">
              {# {% for slide in slider %}
                <div
                  class="splide__slide h-96 md:h-screen bg-center bg-no-repeat bg-cover flex 
                  {% if slide.alignx == 'center' %}
                    justify-center
                  {% elseif slide.alignx == 'left' %}
                    justify-start
                  {% else %}
                    justify-end
                  {% endif %}
                  {% if slide.aligny == 'center' %}
                    items-center
                  {% elseif slide.aligny == 'top' %}
                    items-start
                  {% else %}
                    items-end
                  {% endif %}"
                  style="background-image: url({{ slide.image }})"
                >
                  <h1 class="text-2xl md:text-6xl font-bold text-white">{{ slide.caption }}</h1>
                </div>
              {% endfor %} #}
              <div class="splide__slide h-96 md:h-screen bg-center bg-no-repeat bg-cover flex justify-center items-center" style="background-image: url({{ site.theme.link }}/static/img/074.webp)">
                <h1 class="text-2xl md:text-6xl text-center font-bold text-white">Industria gráfica que impresiona.</h1>
              </div>
              <div class="splide__slide h-96 md:h-screen bg-center bg-no-repeat bg-cover relative" style="background-image: url({{ site.theme.link }}/static/img/101.webp)">
                <h1 class="text-2xl md:text-6xl font-bold text-white absolute right-10 md:right-20 top-20 md:top-1/3">Detalles<br>que impresionan.</h1>
              </div>
              <div class="splide__slide h-96 md:h-screen bg-center bg-no-repeat bg-cover relative" style="background-image: url({{ site.theme.link }}/static/img/wall1.webp)">
                <h1 class="text-2xl md:text-6xl font-bold text-white absolute bottom-40 text-center w-full">Puntualidad, compromiso​ y detalle​.</h1>
              </div>
              <div class="splide__slide h-96 md:h-screen bg-center bg-no-repeat bg-cover relative" style="background-image: url({{ site.theme.link }}/static/img/119.webp)">
                <h1 class="text-2xl md:text-6xl font-bold text-white absolute left-10 md:left-20 bottom-20 md:bottom-1/3">Compromiso<br>con el planeta.</h1>
              </div>
              <div class="splide__slide h-96 md:h-screen bg-center bg-no-repeat bg-cover relative" style="background-image: url({{ site.theme.link }}/static/img/wall2.webp)">
                <h1 class="text-2xl md:text-6xl font-bold text-white absolute right-10 md:right-20 bottom-20 md:bottom-1/3">Satisfacción total en todas​<br/>nuestras entregas.​</h1>
              </div>
            </ul>
          </div>
        </div>
			</section>
      <br><br>
